{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Common build settings
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": ["index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "release",
    "tmp",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.bench.ts"
  ],
}